<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Panel - Ami Sports</title>
  <style>
    .errorsearch {
  color: #d9534f;             /* Bootstrap-style red */
  font-weight: bold;
  text-align: center;
  padding: 15px;
  background-color: #f9d6d5;  /* Light red background */
  border-radius: 5px;
  font-size: 16px;
}

.details{

  margin-left: 300px;

}

.del{
  background-color: red;
}
.del:hover{
  background-color: #d9534f;
}

.view-all-btn {
  background-color: #3498db;
  color: white;
  padding: 8px 18px;
  border: none;
  border-radius: 5px;
  cursor: pointer;
  margin-top: 15px;
  margin-bottom: 15px;

  font-weight: bold;
  transition: background-color 0.3s ease;
}

.view-all-btn:hover {
  background-color: #21618c;
}


    body {
      font-family: Arial, sans-serif;
      background: #f4f4f4;
      padding: 20px;
    }

    h1 {
      color: #222;
    }

    .section {
      background: white;
      padding: 20px;
      margin-bottom: 30px;
      border-radius: 10px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .search-bar {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
    }

    input[type="text"], input[type="number"], textarea, select {
      padding: 10px;
      width: 100%;
      border: 1px solid #ccc;
      border-radius: 6px;
      margin-top: 5px;
    }

    input[type="file"] {
      margin-top: 5px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
    }

    th, td {
      padding: 10px;
      border: 1px solid #ddd;
    }

    th {
      background: #555;
      color: white;
    }

    button {
      background: #008cba;
      color: white;
      border: none;
      padding: 10px 15px;
      border-radius: 5px;
      cursor: pointer;
    }

    button:hover {
      background: #006b93;
    }
  </style>
</head>
<body>

  <h1>Admin Panel - Velora by HK</h1>

  <!-- 🔍 User Search and Email List -->
  <div class="section">
    <h2>Orders</h2>
    <form class="search-bar" method="POST" action="/admin">
      <input type="text" name="id" placeholder="Search order by order id">
      <button type="submit">Search</button>
    </form>

    <table>
      <thead>
        <tr>
          <th>Email</th>
        </tr>
      </thead>
     <tbody>
  <% if (searched === 0) { %>
    <% users.forEach(user => { %>
      <tr>
        <td><%= user.id %><a href = "/details/<%=user._id%>"><button class = "details">view order details (<%=user.status%>)</button></a></td>
      </tr>
    <% }) %>
  <% } else if (searched === 1) { %>
    <tr>
  <td class="errorsearch">
    NO RESULTS FOUND
  </td>
</tr>
  <% } else if (searched === 2) { %>
    <tr>
         
      <td><%= userf.id %><a href = "/details/<%=userf._id%>"><button class = "details">view order details (<%=userf.status%>)</button></a></td>
    </tr>
  <% } %>
</tbody>

    </table>
    <% if (searched === 1 || searched === 2) { %>
  <form method="GET" action="/admin">
    <button type="submit" class="view-all-btn">View All Emails</button>
  </form>
<% } %>
  </div>

  <!-- ➕ Add Product Form -->
  <div class="section">
    <h2>Add Product</h2>
    <form  action="/add" method="POST" enctype="multipart/form-data">
      <label>Product Image</label>
      <input type="file" name="image" required>

      <br>
      <br>

      <label>Product Title</label>
      <input type="text" name="title" required>

      <br>

      <label>Details</label>
      <textarea name="details" rows="4" required></textarea>

      <br>

      <label>Notes:</label>
      <input type="text" name="notes" required>
     

      <br>
      <label>Price (PKR)</label>
      <input type="number" name="price" required>

      

    
      <br><br>
      <button type="submit">Add Product</button>
      <br>
      <br>
    </form>
       <h2 color="red">Delete Product</h2>

     <form action="/delete" method="post">


      <br>
      
      <label>Category</label>
      <select name="title" required>
        
        <% products.forEach(product => { %>
        
        <option value="<%= product.title %>"><%= product.title %></option>
       
        <% }) %>
      </select>

      <br><br>
      <button type="submit" class="del">Delete Product</button>
      <br>
      <br>
    
      
    </form>
  </div>



  <div class="section">
    <h2>Add Article</h2>
    <form  action="/addarticle" method="post" enctype="multipart/form-data">
      <label>Article Image</label>
      <input type="file" name="image" required>

      <br>
      <br>

      <label>Article Header</label>
      <input type="text" name="header" required>

      <br>

      <label>Short Description</label>
      <textarea name="shortdescription" rows="4" required></textarea>

      <label>Long Description</label>
      <textarea name="longdescription" rows="5" required></textarea>


      <br>
      <label>Time</label>
      <input type="text" name="time" required>

      <br>
      
      
      <br>
      <button type="submit">Add Article</button>
      <br>
      <br>
    </form>

       <h2 color="red">Delete Article</h2>

     <form action="/deletearticle" method="post">


      <br>
      
      <label>Category</label>
      <select name="header" required>
        
        <% articles.forEach(article => { %>
        
        <option value="<%= article.header %>"><%= article.header %></option>
       
        <% }) %>
      </select>

      <br><br>
      <button type="submit" class="del">Delete Article</button>
      <br>
      <br>
    
    </form>
  </div>


</body>

</html>
