<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders</title>
</head>
<style>

body {
  font-family: Arial, sans-serif;
  background: #f5f5f7;
  margin: 0;
  padding: 0;
  color: #333;
}

.container {
  max-width: 800px;
  margin: 30px auto;
  padding: 0 15px;
}

h1 {
  text-align: center;
  margin-bottom: 20px;
}

.empty {
  text-align: center;
  color: #777;
  padding: 20px;
  border: 1px dashed #aaa;
  background: #fff;
  border-radius: 10px;
}

.orders {
  display: flex;
  flex-direction: column;
  gap: 15px;
}

.order-card {
  background: #fff;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
  padding: 15px;
}

.order-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10px;
}

.order-id {
  font-weight: bold;
}

.status {
  padding: 5px 10px;
  border-radius: 20px;
  font-size: 12px;
  font-weight: bold;
  color: #fff;
}

.status.processing { background: #f59e0b; }
.status.inquiring { background: red; }
.status.confirmed { background: #22c55e; }


.order-body p {
  margin: 5px 0;
}

.order-actions {
  margin-top: 10px;
  text-align: right;
}

.btn {
  background: #7c5cff;
  border: none;
  padding: 8px 14px;
  color: #fff;
  border-radius: 8px;
  cursor: pointer;
  transition: background 0.2s;
}

.btn:hover {
  background: #5a3dce;
}


</style>
<body>
  <div class="container">
    <h1>My Orders</h1>

    <% if (orders.length === 0) { %>
      <p class="empty">You donâ€™t have any orders yet.</p>
    <% } else { %>
      <div class="orders">
        <% orders.forEach(o => { %>
          <div class="order-card">
            <div class="order-header">
              <span class="order-id">Order #<%= o.id %></span>
              <span class="status <%= o.status.toLowerCase() %>"><%= o.status %></span>
            </div>
            <div class="order-body">
              <p><b>Product:</b> <%= o.title %></p>
              <p><b>Quantity:</b> <%= o.quantity %></p>
              <p><b>Total:</b> Rs <%= o.price * o.quantity %></p>
              <p><b>Date:</b> <%= o.date %></p>
            </div>
            <div class="order-actions">
              <a href="/viewdetails/<%= o.id %>"><button class="btn view-btn">View Details</button></a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  <script>
    function showDetails(orderId) {
  alert("Show details for Order #" + orderId);
  // later you can open a modal or redirect to /orders/:id
}
  </script>
</body>
</html>
