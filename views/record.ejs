<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Orders</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

</head>
<style>
/* ========== GLOBAL ========== */
body {
  font-family: 'Inter', sans-serif;
  margin: 0;
  padding: 0;
  background: #0c0c0c; /* dark background */
  color: #f5f5f5;
  line-height: 1.6;
}
 :root {
  --bg: #0c0c0c;
  --bg-card: #161616;
  --text: #f9f9f9;
  --muted: #b5b5b5;
  --primary: #d4af37; /* luxury gold */
  --font-serif: "Playfair Display", serif;
  --font-sans: "Poppins", sans-serif;
}
    /* ---------------- HEADER ---------------- */
header {
  display: flex;
justify-content: space-between;
  padding: 22px 50px;
  position: sticky;
  top: 0;
  z-index: 999;
  background: rgba(12, 12, 12, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
   margin: auto;
   

}

.logo .title {
  font-family: var(--font-serif);
  font-size: 30px;
  font-weight: 700;
  color: var(--primary);
}

.logo .subtitle {
  font-size: 13px;
  color: var(--muted);
  margin-top: -3px;
}

nav {
  display: flex;
  align-items: center;
  gap: 30px;
  max-width: 1300px;
}

nav a {
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  color: var(--text);
  transition: color 0.3s ease;
}

nav a:hover {
  color: var(--primary);
}

.cta {
  background: var(--primary);
  color: #000;
  padding: 10px 26px;
  border-radius: 40px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cta:hover {
  background: #e0c04c;
}

/* Hamburger menu */
.hamburger {
  display: none;
  flex-direction: column;
  gap: 6px;
  cursor: pointer;
}

.hamburger span {
  height: 2px;
  width: 24px;
  background: var(--text);
}

/* ---------------- MOBILE NAV ---------------- */
.mobile-nav {
  position: fixed;
  top: 0;
  right: -100%;
  height: 100vh;
  width: 75%;
  background: var(--bg-card);
  display: none;
  flex-direction: column;
  padding: 40px;
  gap: 20px;
  transition: right 0.4s ease;
}

.mobile-nav.active {
  right: 0;
}

.mobile-nav a {
  color: var(--text);
  text-decoration: none;
  font-size: 18px;
  text-align: center;
}

.close-btn {
  align-self: flex-end;
  font-size: 26px;
  color: var(--text);
  border: none;
  background: none;
  cursor: pointer;
}

.container {
  max-width: 1000px;
  margin: 40px auto;
  padding: 0 16px;
}


.status.processing { background: #f59e0b; }
.status.inquiring { background: red; }
.status.confirmed { background: #22c55e; }

h1 {
  font-size: 2rem;
  font-weight: 700;
  margin-bottom: 24px;
  color: #fff;
}

.empty {
  font-size: 1.1rem;
  color: #bbb;
  background: rgba(255, 255, 255, 0.05);
  padding: 16px;
  border-radius: 12px;
  text-align: center;
  border: 1px solid rgba(255,255,255,0.08);
}

/* ========== ORDERS GRID ========== */
.orders {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24px;
}

.order-card {
  background: rgba(20,20,20,0.8);
  border: 1px solid rgba(255,255,255,0.08);
  border-radius: 16px;
  box-shadow: 0 6px 20px rgba(0,0,0,0.6);
  overflow: hidden;
  display: flex;
  flex-direction: column;
  transition: transform 0.2s ease, border-color 0.3s ease;
}

.order-card:hover {
  transform: translateY(-4px);
  border-color: rgba(197,157,36,0.8); /* gold accent on hover */
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255,255,255,0.05);
  padding: 14px 18px;
  border-bottom: 1px solid rgba(255,255,255,0.08);
  font-size: 0.95rem;
  font-weight: 600;
  color: #f5f5f5;
}

.order-id {
  color: #e5e5e5;
}

.status {
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.85rem;
  font-weight: 600;
  text-transform: capitalize;
}

.status.pending {
  background: rgba(255, 193, 7, 0.2);
  color: #ffc107;
}

.status.completed {
  background: rgba(40, 167, 69, 0.2);
  color: #28a745;
}

.status.cancelled {
  background: rgba(220, 53, 69, 0.2);
  color: #dc3545;
}

.order-body {
  padding: 16px 18px;
  flex-grow: 1;
  font-size: 0.95rem;
  color: #ccc;
}

.order-body p {
  margin: 6px 0;
}

.order-actions {
  padding: 14px 18px;
  border-top: 1px solid rgba(255,255,255,0.08);
  text-align: right;
}

.btn {
  padding: 10px 18px;
  border-radius: 40px;
  border: none;
  font-size: 0.9rem;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.view-btn {
  background: #c59d24; /* your brand gold */
  color: #000;
}

.view-btn:hover {
  background: #e0c04c;
}

/* ---------------- FOOTER ---------------- */
footer {
  padding: 30px 0px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  max-width: 1300px;
  justify-content: center;
  align-items: center;
  margin: auto;
  margin-top: 200px;
  
}

footer a {
  color: var(--text);
  text-decoration: none;
  font-size: 14px;
}

footer a:hover {
  color: var(--primary);
}

.footer-grid {
  display: flex;
  flex-wrap: wrap;
  
  gap: 40px;
  margin-top: 20px;

}

footer .muted {
  color: var(--muted);
  font-size: 14px;
}

/* ========== RESPONSIVENESS ========== */
@media (max-width: 768px) {
  .orders {
    grid-template-columns: 1fr;
  }

  .container {
    margin: 24px auto;
  }

  h1 {
    font-size: 1.6rem;
    text-align: center;
  }
}

@media (max-width: 480px) {
  .order-header, .order-body, .order-actions {
    padding: 12px 14px;
  }

  .btn {
    padding: 8px 14px;
    font-size: 0.85rem;
  }
}
</style>
<body>

   <header>
      <div class="brand">
        <div class="logo">
          <div class="title">Velora</div>
          <div class="subtitle">By HK</div>
        </div>
      </div>


      <div class="hamburger" id="hamburger" aria-label="Menu" aria-expanded="false" role="button">
        <span></span>
        <span></span>
        <span></span>
      </div>

      <nav id="navDesktop">

        <a href="#products">Products</a>
        <a href="#articles">Journal</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
        <a href="/record">Orders</a>

        <button class="cta" id="shopNow">Shop Now</button>
      </nav>

      <div class="mobile-nav" id="mobileNav" aria-hidden="true">
        <button class="close-btn" aria-label="Close menu">✕</button>
        <a href="#products">Products</a>
        <a href="#articles">Journal</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
        <a href="/record">Orders</a>
        <button class="cta" id="shopNowMobile">Shop Now</button>
        <div style="margin-top:12px;display:flex;gap:10px;align-items:center;justify-content:space-between">

    </header>

  <div class="container">
    <h1>My Orders</h1>

    <% if (orders.length === 0) { %>
      <p class="empty">You don’t have any orders yet.</p>
    <% } else { %>
      <div class="orders">
        <% orders.forEach(o => { %>
          <div class="order-card">
            <div class="order-header">
              <span class="order-id">Order #<%= o.id %></span>
              <span class="status <%= o.status.toLowerCase() %>"><%= o.status %></span>
            </div>
            <div class="order-body">
              <p><b>Product:</b> <%= o.title %></p>
              <p><b>Quantity:</b> <%= o.quantity %></p>
              <p><b>Total:</b> Rs <%= o.price * o.quantity %></p>
              <p><b>Date:</b> <%= o.date %></p>
            </div>
            <div class="order-actions">
              <a href="/viewdetails/<%= o.id %>"><button class="btn view-btn">View Details</button></a>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>
  </div>

  
    <footer>
      <div style="display:flex;justify-content:space-between;align-items:flex-start;gap:12px;flex-wrap:wrap">
        <div>
          <div style="font-weight:700">Velora</div>
          <div class="muted" style="max-width:30ch">By HK — Fragrance Redefined. Handcrafted scents, responsibly
            sourced.</div>
        </div>

        <div class="footer-grid">

           <div style="min-width:160px">
            <div style="font-weight:700">Media</div>
              <a href = "https://www.instagram.com/velorabyhk?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="><i class="fab fa-instagram"></i> instagram</a>
              <br>
              <a href="https://wa.me/923107175839" target="_blank"><i class="fab fa-whatsapp"></i> whatsapp</a>
</a>
            <div class="muted"></div>
          </div>
 


          <div style="min-width:160px">
            <div style="font-weight:700">Shop</div>
            <div class="muted">Products • Limited editions • Gift sets</div>
          </div>

          <div style="min-width:160px">
            <div style="font-weight:700">Support</div>
            <div class="muted">Shipping • Returns • Contact</div>
          </div>
        </div>
      </div>

      <div
        style="margin-top:18px;display:flex;justify-content:space-between;align-items:center;gap:12px;flex-wrap:wrap">
        <div class="muted small">© 2025 Velora by HK — All rights reserved.</div>
        <div class="muted small">Made with care • <a href="/privacy">Privacy</a> • <a href="/terms">Terms</a> </div>
      </div>
    </footer>

  <script>
    function showDetails(orderId) {
  alert("Show details for Order #" + orderId);
  // later you can open a modal or redirect to /orders/:id
}

    // Simple product data for modal lookup

    const hamburger = document.querySelector('#hamburger');
    const mobileNav = document.querySelector('#mobileNav');
    const navDesktop = document.querySelector('.navDesktop');
    const closeBtn = document.querySelector('.close-btn');

    // SAFETY checks

    hamburger.addEventListener('click', () => {

      
      const expanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', !expanded);
      mobileNav.classList.toggle('active');
      mobileNav.style.display="flex";

    });


    function closeMenu() {
      mobileNav.classList.remove('active');
      mobileNav.style.display="none";
      mobileNav.setAttribute('aria-hidden', 'true');
      hamburger.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = ''; // restore scroll
    }




    closeBtn.addEventListener('click', closeMenu);

  </script>
</body>
</html>
