  <style>
  /* Base styling */
body {
  font-family: "Segoe UI", Arial, sans-serif;
  background: #0d0d0d; /* deep dark background */
  margin: 0;
  padding: 0;
  color: #e0e0e0;
  line-height: 1.6;
}
:root {
  --bg: #0c0c0c;
  --bg-card: #161616;
  --text: #f9f9f9;
  --muted: #b5b5b5;
  --primary: #d4af37; /* luxury gold */
  --font-serif: "Playfair Display", serif;
  --font-sans: "Poppins", sans-serif;
}
    /* ---------------- HEADER ---------------- */
header {
  display: flex;
  justify-content: space-between;
  padding: 22px 50px;
  position: sticky;
  top: 0;
  z-index: 999;
  background: rgba(12, 12, 12, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
   margin: auto;
   

}

.logo .title {
  font-family: var(--font-serif);
  font-size: 30px;
  font-weight: 700;
  color: var(--primary);
}

.logo .subtitle {
  font-size: 13px;
  color: var(--muted);
  margin-top: -3px;
}

nav {
  display: flex;
  align-items: center;
  gap: 30px;
  max-width: 1300px;
}

nav a {
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  color: var(--text);
  transition: color 0.3s ease;
  text-align: center;
}

nav a:hover {
  color: var(--primary);
}

.cta {
  background: var(--primary);
  color: #000;
  padding: 10px 26px;
  border-radius: 40px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cta:hover {
  background: #e0c04c;
}

/* Hamburger menu */
.hamburger {
  display: none;
  flex-direction: column;
  gap: 6px;
  cursor: pointer;
}

.hamburger span {
  height: 2px;
  width: 24px;
  background: var(--text);
}

/* ---------------- MOBILE NAV ---------------- */
.mobile-nav {
  position: fixed;
  top: 0;
  right: -100%;
  height: 100vh;
  width: 75%;
  background: var(--bg-card);
  display: none;
  flex-direction: column;
  padding: 40px;
  gap: 20px;
  transition: right 0.4s ease;
}

.mobile-nav.active {
  right: 0;
}

.mobile-nav a {
  color: var(--text);
  text-decoration: none;
  font-size: 18px;
}

.close-btn {
  align-self: flex-end;
  font-size: 26px;
  color: var(--text);
  border: none;
  background: none;
  cursor: pointer;
}



/* Container card */
.container {
  max-width: 850px;
  margin: 50px auto;
  background: #1a1a1a;
  padding: 35px;
  border-radius: 14px;
  box-shadow: 0 6px 25px rgba(0, 0, 0, 0.6);
  border: 1px solid rgba(255, 255, 255, 0.05);
  transition: transform 0.2s ease, box-shadow 0.3s ease;
}
.container:hover {
  transform: translateY(-3px);
  box-shadow: 0 12px 28px rgba(0, 0, 0, 0.8);
}

/* Title */
h2 {
  text-align: center;
  margin-bottom: 25px;
  font-size: 28px;
  color: #f4b400;
  letter-spacing: 0.5px;
  font-weight: 600;
  border-bottom: 2px solid #333;
  padding-bottom: 10px;
}

/* Order details */
.detail {
  margin-bottom: 15px;
  font-size: 15px;
}
.detail strong {
  display: inline-block;
  width: 220px;
  color: #f4b400;
  font-weight: 600;
}
.detail span {
  color: #eee;
}

/* Proof image */
.proof-img {
  max-width: 320px;
  margin-top: 12px;
  border: 1px solid #333;
  border-radius: 10px;
  padding: 5px;
  background: #111;
  transition: transform 0.2s ease, box-shadow 0.3s ease;
}
.proof-img:hover {
  transform: scale(1.03);
  box-shadow: 0 0 12px rgba(244, 180, 0, 0.3);
}

/* Buttons base */
a {
  text-decoration: none;
}
.back-btn,
.del-btn,
.confirm-btn,
.inquiry-btn {
  display: inline-block;
  padding: 12px 20px;
  font-size: 15px;
  font-weight: 600;
  border-radius: 8px;
  margin: 12px 8px 0 0;
  transition: background 0.3s ease, transform 0.2s ease, box-shadow 0.2s ease;
  cursor: pointer;
}

/* Back button */
.back-btn {
  background: #f4b400;
  color: #111;
}
.back-btn:hover {
  background: #d99a00;
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(244, 180, 0, 0.3);
}

/* Delete button */
.del-btn {
  background: #e60000;
  color: #fff;
}
.del-btn:hover {
  background: #990000;
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(230, 0, 0, 0.4);
}

/* Confirm button */
.confirm-btn {
  background: #00c853;
  color: #fff;
}
.confirm-btn:hover {
  background: #009624;
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(0, 200, 83, 0.4);
}

/* Inquiry button */
.inquiry-btn {
  background: #ff5722;
  color: #fff;
}
.inquiry-btn:hover {
  background: #e64a19;
  transform: translateY(-2px);
  box-shadow: 0 4px 10px rgba(255, 87, 34, 0.4);
}

  
/* ---------------- FOOTER ---------------- */
footer {
  padding: 30px 0px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  max-width: 1300px;
  justify-content: center;
