}
    /* ---------------- HEADER ---------------- */
header {
  display: flex;
  justify-content: space-between;
  padding: 22px 50px;
  position: sticky;
  top: 0;
  z-index: 999;
  background: rgba(12, 12, 12, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
   margin: auto;
   

}

.logo .title {
  font-family: var(--font-serif);
  font-size: 30px;
  font-weight: 700;
  color: var(--primary);
}

.logo .subtitle {
  font-size: 13px;
  color: var(--muted);
  margin-top: -3px;
}

nav {
  display: flex;
  align-items: center;
  gap: 30px;
  max-width: 1300px;
}

nav a {
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  color: var(--text);
  transition: color 0.3s ease;
}

nav a:hover {
  color: var(--primary);
}

.cta {
  background: var(--primary);
  color: #000;
  padding: 10px 26px;
  border-radius: 40px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cta:hover {
  background: #e0c04c;
}

/* Hamburger menu */
.hamburger {
  display: none;
  flex-direction: column;
  gap: 6px;
  cursor: pointer;
}

.hamburger span {
  height: 2px;
  width: 24px;
  background: var(--text);
}

/* ---------------- MOBILE NAV ---------------- */
.mobile-nav {
  position: fixed;
  top: 0;
  right: -100%;
  height: 100vh;
  width: 75%;
  background: var(--bg-card);
  display: none;
  flex-direction: column;
  padding: 40px;
  gap: 20px;
  transition: right 0.4s ease;
}

.mobile-nav.active {
  right: 0;
}

.mobile-nav a {
  color: var(--text);
  text-decoration: none;
  font-size: 18px;
  text-align: center;
}

.close-btn {
  align-self: flex-end;
  font-size: 26px;
  color: var(--text);
  border: none;
  background: none;
  cursor: pointer;
}
    .article-container {
      max-width: 900px;
      margin: 50px auto;
      background: #1a1a1a;
      box-shadow: 0 8px 25px rgba(0,0,0,0.5);
      border-radius: 15px;
      overflow: hidden;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .article-container:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 30px rgba(0,0,0,0.8);
    }

    .article-header img {
      width: 100%;
      height: 450px;
      object-fit: cover;
      filter: brightness(0.85) contrast(1.1);
      transition: filter 0.4s ease;
    }

    .article-header img:hover {
      filter: brightness(1) contrast(1.2);
    }

    .article-content {
      padding: 30px;
    }

    .article-title {
      font-size: 2.2rem;
      font-weight: bold;
      margin-bottom: 15px;
      color: #f4b400; /* gold highlight */
      text-shadow: 0 2px 8px rgba(0,0,0,0.7);
      border-left: 5px solid #f4b400;
      padding-left: 15px;
    }

    .article-desc {
      font-size: 1.1rem;
      color: #bbb;
      margin-bottom: 25px;
      font-style: italic;
    }

    .article-body {
      font-size: 1.05rem;
      color: #ddd;
      line-height: 1.9;
    }

    .article-body p {
      margin-bottom: 18px;
    }

    .btn {
      display: inline-block;
      background: #f4b400;
      color: #111;
      padding: 10px 18px;
      border-radius: 8px;
      text-decoration: none;
      font-weight: bold;
      margin-top: 25px;
      transition: background 0.3s ease, transform 0.2s ease;
    }

    .btn:hover {
      background: #d99a00;
      transform: scale(1.05);
    }

    
/* ---------------- FOOTER ---------------- */
footer {
  padding: 30px 0px;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
  max-width: 1300px;
  justify-content: center;
  align-items: center;
  margin: auto;
  margin-top: 200px;
  
}

footer a {
  color: var(--text);
  text-decoration: none;
  font-size: 14px;
}

footer a:hover {
  color: var(--primary);
}

.footer-grid {
  display: flex;
  flex-wrap: wrap;
  
  gap: 40px;
  margin-top: 20px;

}

footer .muted {
  color: var(--muted);
  font-size: 14px;
}

    /* Responsive */
    @media (max-width: 768px) {
      header{
        padding: 22px 30px ;
      }
       .hamburger{
  
    margin-top: 25px;
}
      .article-container {
        margin: 20px;
      }
      .article-header img {
        height: 280px;
      }
      .article-title {
        font-size: 1.6rem;
      }
      .article-desc {
        font-size: 1rem;
      }
  nav {
    display: none;
  }
  .hamburger {
    display: flex;
  }
    }
  </style>
</head>
