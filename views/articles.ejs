  <style>
     /* Global Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
a{
  text-decoration: none;
}
    

    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #0d0d0d; /* deep dark */
      margin: 0;
      padding: 0;
      line-height: 1.6;
      color: #ddd;
    } :root {
  --bg: #0c0c0c;
  --bg-card: #161616;
  --text: #f9f9f9;
  --muted: #b5b5b5;
  --primary: #d4af37; /* luxury gold */
  --font-serif: "Playfair Display", serif;
