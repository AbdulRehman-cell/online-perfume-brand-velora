<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>Velora by HK — Fragrance Redefined</title>
  <meta name="description"
    content="Velora by HK — premium perfume collection. Shop fragrances, read articles, discover notes and story behind each scent." />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">

  <style>
/* ---------------- GLOBAL ---------------- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}
a{
    text-decoration: none;
  }
:root {
  --bg: #0c0c0c;
  --bg-card: #161616;
  --text: #f9f9f9;
  --muted: #b5b5b5;
  --primary: #d4af37; /* luxury gold */
  --font-serif: "Playfair Display", serif;
  --font-sans: "Poppins", sans-serif;
}

body {
  font-family: var(--font-sans);
  background: var(--bg);
  color: var(--text);
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
}

.container {
  width: 100%;
  max-width: 1300px;
  margin: auto;
  padding: 0 20px;
}

button {
  background: linear-gradient(135deg, #4f46e5, #6366f1); /* modern gradient */
  color: white;
  border: none;
  border-radius: 8px;
  padding: 10px 18px;
  font-size: 1rem;
  font-weight: 500;
  cursor: pointer;
  transition: all 0.3s ease;
  box-shadow: 0 3px 8px rgba(0, 0, 0, 0.15);
}

button:hover {
  background: linear-gradient(135deg, #4338ca, #4f46e5); /* darker on hover */
  transform: translateY(-2px);
  box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2);
}

button:active {
  transform: translateY(0);
  box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15);
}

/* ---------------- HEADER ---------------- */
header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 22px 50px;
  position: sticky;
  top: 0;
  z-index: 999;
  background: rgba(12, 12, 12, 0.9);
  backdrop-filter: blur(10px);
  border-bottom: 1px solid rgba(255, 255, 255, 0.05);
}

.logo .title {
  font-family: var(--font-serif);
  font-size: 30px;
  font-weight: 700;
  color: var(--primary);
}

.logo .subtitle {
  font-size: 13px;
  color: var(--muted);
  margin-top: -3px;
}

nav {
  display: flex;
  align-items: center;
  gap: 30px;
}

nav a {
  text-decoration: none;
  font-size: 15px;
  font-weight: 500;
  color: var(--text);
  transition: color 0.3s ease;
}

nav a:hover {
  color: var(--primary);
}

.cta {
  background: var(--primary);
  color: #000;
  padding: 10px 26px;
  border-radius: 40px;
  font-weight: 600;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cta:hover {
  background: #e0c04c;
}

/* Hamburger menu */
.hamburger {
  display: none;
  flex-direction: column;
  gap: 6px;
  cursor: pointer;
}

.hamburger span {
  height: 2px;
  width: 24px;
  background: var(--text);
}

/* ---------------- MOBILE NAV ---------------- */
.mobile-nav {
  position: fixed;
  top: 0;
  right: -100%;
  height: 100vh;
  width: 75%;
  background: var(--bg-card);
  display: none;
  flex-direction: column;
  padding: 40px;
  gap: 20px;
  transition: right 0.4s ease;
}

.mobile-nav.active {
  right: 0;

}

.mobile-nav a {
  color: var(--text);
  text-decoration: none;
  font-size: 18px;
    text-align: center;
}

.close-btn {
  align-self: flex-end;
  font-size: 26px;
  color: var(--text);
  border: none;
  background: none;
  cursor: pointer;
}

/* ---------------- HERO ---------------- */
.hero {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
  padding: 100px 0;
}

.hero-left h1 {
  font-family: var(--font-serif);
  font-size: 48px;
  line-height: 1.2;
  margin-bottom: 18px;
}

.hero-left .lead {
  color: var(--muted);
  margin-bottom: 28px;
}

.hero-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  
}

.product-showcase img {
  width: 100%;
  max-width: 400px;
  border-radius: 16px;
  box-shadow: 0 8px 28px rgba(0, 0, 0, 0.6);
}


/* ---------------- SECTIONS ---------------- */
.section {
  padding: 80px 0;
}

.section-title h2 {
  font-family: var(--font-serif);
  font-size: 34px;
  margin-bottom: 8px;
}

.muted {
  color: var(--muted);

}

/* ---------------- PRODUCT GRID ---------------- */
.grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 28px;
  margin-top: 40px;
}

.card {
  width: fit-content;
  background: var(--bg-card);
  border-radius: 14px;
  overflow: hidden;
  padding: 18px;
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  
}

.card:hover {
  transform: translateY(-8px);
  box-shadow: 0 12px 32px rgba(0, 0, 0, 0.5);
}

.card img {
  width: 270px;
  height: 300px;
  border-radius: 10px;
  margin-bottom: 14px;
  
}

/* ---------------- ARTICLES ---------------- */
.articles-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 15px;
  margin-top: 32px;
}

.articles-grid article {
  background: var(--bg-card);
  border-radius: 14px;
  padding: 20px;
  transition: transform 0.3s ease;
}

.articles-grid article:hover {
  transform: translateY(-6px);
}

article.card{

  width: 310px;
  
  

}
img .articles-grid{
  padding:auto;
}

/* ---------------- FOOTER ---------------- */
footer {
  padding: 30px 0;
  border-top: 1px solid rgba(255, 255, 255, 0.08);
}

footer a {
  color: var(--text);
  text-decoration: none;
  font-size: 14px;
}

footer a:hover {
  color: var(--primary);
}

.footer-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 40px;
  margin-top: 20px;
}

footer .muted {
  color: var(--muted);
  font-size: 14px;
}

/* ---------------- RESPONSIVE ---------------- */
@media (max-width: 1024px) {
  .hero {
    grid-template-columns: 1fr;
    text-align: center;
  }
  .hero-left {
    order: 2;
  }
  .product-showcase {
    order: 1;
    display: flex;
    justify-content: center;
  }
}

@media (max-width: 768px) {
  
      header{
        padding: 22px 30px ;
      }
  nav {
    display: none;
  }
  .hamburger {
    display: flex;
  }
  .hero-left h1 {
    font-size: 34px;
  }
  .section-title h2 {
    font-size: 28px;
  }
 
}

@media (max-width: 480px) {
  .hero-left h1 {
    font-size: 28px;
  }
  .cta {
    width: 100%;
    text-align: center;
  }
}


  </style>
</head>

<body>
  <header>
      <div class="brand">
        <div class="logo">
          <div class="title">Velora</div>
          <div class="subtitle">By HK</div>
        </div>
      </div>


      <div class="hamburger" id="hamburger" aria-label="Menu" aria-expanded="false" role="button">
        <span></span>
        <span></span>
        <span></span>
      </div>

      <nav id="navDesktop">

        <a href="#products">Products</a>
        <a href="#articles">Journal</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
        <a href="/record">Orders</a>

        <button class="cta" id="shopNow">Shop Now</button>
      </nav>

      <div class="mobile-nav" id="mobileNav" aria-hidden="true">
        <button class="close-btn" aria-label="Close menu">✕</button>
        <a href="#products">Products</a>
        <a href="#articles">Journal</a>
        <a href="#about">About</a>
        <a href="#contact">Contact</a>
        <a href="/record">Orders</a>
        <button class="cta" id="shopNowMobile">Shop Now</button>
        <div style="margin-top:12px;display:flex;gap:10px;align-items:center;justify-content:space-between">

    </header>
  <div class="container">
    

    <!-- HERO -->
    <section class="hero">
      <div class="hero-left">
        <div class="eyebrow">Fragrance Redefined</div>
        <h1>Velora — a modern classic for those who appreciate subtle elegance.</h1>
        <p class="lead">Crafted with refined notes that last from morning to night. Explore our Eau de Parfum
          collection, discover scent stories and choose a signature perfume that fits your mood.</p>

        <div class="hero-actions">
          <button class="btn btn-primary" id="openShow" onclick="window.location='#products'">Explore the
            Products</button>
          <button class="btn btn-outline" onclick="window.location='#articles'">Read Our Journal</button>
        </div>

        <div style="margin-top:80px;color:var(--muted);font-size:13px"><b>Free shipping across whole Pakistan • Secure
            payments • Fast response.</b></div>
      </div>

      <div class="product-showcase">
        <!-- replace the src with your product image paths -->
        <div class="bottle">
          <img src="\images\image.png" alt="Velora perfume bottle" id="showcaseImg" />

        </div>
      </div>
    </section>

    <!-- COLLECTIONS -->
    <section id="products" class="section">

      <div class="section-title">
        <div>
          <h2 style="margin:0">Our Collection</h2>
          <div class="muted">Explore signature scents and limited editions</div>
          <br>
        </div>

      </div>

      <div class="grid" id="productGrid">
        <!-- Product Cards (swap images) -->
        <% products.forEach((product,i)=>{ %>
          <div class="card">
            <img src="<%=product.image%>" alt="Velora" />
            <h3>
              <%=product.title%>
            </h3>
            <div class="muted">
              Fragrance Notes: <%=product.notes%>
            </div>
            <div style="display:flex;justify-content:space-between;align-items:center;margin-top:10px">
              <div style="font-weight:700">PKR : <%=product.price%>
              </div>
              <a href="/order/<%=product.id%>"><button class="btn btn-outline">View</button></a>
            </div>

          </div>
          <% }) %>


      </div>
    </section>

    <!-- ARTICLES -->
    <section id="articles" class="section">
      <div class="section-title">
        <div>
          <h2 style="margin:0">Journal</h2>
          <div class="muted">Stories, guides and the art of scent</div>
        </div>

      </div>

      <div class="articles-grid" style="margin-top:20px">
        <% articles.forEach(article=>{ %>
          <article class="card">
            <img src="/images/productimg/<%=article.image%>" alt="article" />
            <h3>
              <%= article.header %>
            </h3>
            <p class="muted">
              <%= article.shortdescription %>
            </p>
            <div style="display:flex;justify-content:space-between;align-items:center;margin-top:12px">
              <div class="muted-2 small">By HK • <%=article.time%> min read</div><a href="/article/<%= article.id %>"
                class="small">Read</a>
            </div>
          </article>
          <% }) %>

      </div>
    </section>

    <!-- ABOUT & CONTACT -->
    <section id="about" class="section">
      <div style="display:flex;gap:28px;flex-wrap:wrap;align-items:flex-start">
        <div style="flex:1;min-width:300px">
          <h2>About Velora</h2>
          <p class="muted para">Velora by HK is a boutique fragrance label dedicated to crafting memorable scents using
            responsibly sourced raw materials. Each formula is hand-blended and aged to achieve balance and longevity.
          </p>
          <ul class="muted" style="margin-top:12px">
            <li>Small-batch production</li>
            <li>Environmental responsibility</li>
            <li>Free shipping across all Pakistan</li>
          </ul>
        </div>

        <div style="width:360px;min-width:260px" id="contact">
          <h3>Contact & Orders</h3>
          <% if(sent===2){ %>
            <form id="contactForm" class="card" action="/contact" method="POST"
              style="display:flex;flex-direction:column;gap:10px">
              <input name="name" placeholder="Full name" required
                style="padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.03);background:transparent;color:#fff" />
              <input name="email" type="email" placeholder="Email" required
                style="padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.03);background:transparent;color:#fff" />
              <textarea name="message" rows="4" placeholder="Message or order details"
                style="padding:10px;border-radius:8px;border:1px solid rgba(255,255,255,0.03);background:transparent;color:#fff"></textarea>
              <div style="display:flex;gap:10px;justify-content:space-between;align-items:center">
                <button class="btn btn-primary" type="submit">Send Message</button>
                <div class="small muted">Or email: velorabyhk@gmail.com</div>
              </div>
            </form>
            <% }else{ %>
              <h3><b>
                  <%=name%> thanks for contacting
                .You will recieve a responsive email shortly</b></h3>
              <%}%>

        </div>
      </div>
    </section>

    <footer>
      <div style="display:flex;justify-content:space-between;align-items:flex-start;gap:12px;flex-wrap:wrap">
        <div>
          <div style="font-weight:700">Velora</div>
          <div class="muted" style="max-width:30ch">By HK — Fragrance Redefined. Handcrafted scents, responsibly
            sourced.</div>
        </div>

        <div class="footer-grid">

           <div style="min-width:160px">
            <div style="font-weight:700">Media</div>
              <a href = "https://www.instagram.com/velorabyhk?utm_source=ig_web_button_share_sheet&igsh=ZDNlZDc0MzIxNw=="><i class="fab fa-instagram"></i> instagram</a>
              <br>
              <a href="https://wa.me/923107175839" target="_blank"><i class="fab fa-whatsapp"></i> whatsapp</a>
</a>
            <div class="muted"></div>
          </div>
 


          <div style="min-width:160px">
            <div style="font-weight:700">Shop</div>
            <div class="muted">Products • Limited editions • Gift sets</div>
          </div>

          <div style="min-width:160px">
            <div style="font-weight:700">Support</div>
            <div class="muted">Shipping • Returns • Contact</div>
          </div>
        </div>
      </div>

      <div
        style="margin-top:18px;display:flex;justify-content:space-between;align-items:center;gap:12px;flex-wrap:wrap">
        <div class="muted small">© 2025 Velora by HK — All rights reserved.</div>
        <div class="muted small">Made with care • <a href="/privacy">Privacy</a> • <a href="/terms">Terms</a> </div>
      </div>
    </footer>

  </div>




  <script>

    // Simple product data for modal lookup

    const hamburger = document.querySelector('#hamburger');
    const mobileNav = document.querySelector('#mobileNav');
    const navDesktop = document.querySelector('.navDesktop');
    const closeBtn = document.querySelector('.close-btn');

    // SAFETY checks

    hamburger.addEventListener('click', () => {

      
      const expanded = hamburger.getAttribute('aria-expanded') === 'true';
      hamburger.setAttribute('aria-expanded', !expanded);
      mobileNav.classList.toggle('active');
      mobileNav.style.display="flex";

    });


    function closeMenu() {
      mobileNav.classList.remove('active');
      mobileNav.style.display="none";
      mobileNav.setAttribute('aria-hidden', 'true');
      hamburger.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = ''; // restore scroll
    }




    closeBtn.addEventListener('click', closeMenu);

  </script>

  <!-- NOTES for usage: Replace image files in the ./images/ folder with your product and article images. Use the provided high-resolution photos for best results. -->
</body>

</html>